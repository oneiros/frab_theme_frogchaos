%ul
  - @conference.days.each_with_index do |day, index|
    %li
      = link_to public_schedule_path(:date => day) do
        %span.normal 
          Day #{index + 1} - #{day} (#{link_to "PDF", public_schedule_path(:date => day, :format => :pdf)})
  %li
    = link_to public_speakers_path do
      %span.normal Speakers
  %li
    = link_to public_events_path do
      %span.normal Events
  %li
    = link_to public_schedule_index_path(:format => :ics) do
      %span.normal iCalendar
  %li
    = link_to public_schedule_index_path(:format => :xcal) do
      %span.normal xCal
  %li
    = link_to public_schedule_index_path(:format => :xml) do
      %span.normal XML
  %li
    = link_to public_schedule_index_path(:format => :json) do
      %span.normal JSON
